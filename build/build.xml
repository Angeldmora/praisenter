<?xml version="1.0" encoding="UTF-8"?>
<project name="Praisenter" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant" xmlns:artifact="antlib:org.apache.maven.artifact.ant" xmlns:if="ant:if" xmlns:unless="ant:unless">
	<property name="parentdir" location=".." />

	<echo>${basedir}</echo>
	<echo>${parentdir}</echo>
	
	<!-- OS and Architecture conditions -->
	<condition property="mac32"><os family="mac" arch="x86" /></condition>
	<condition property="mac64"><os family="mac" arch="amd64" /></condition>
	<condition property="windows32"><os family="windows" arch="x86" /></condition>
	<condition property="windows64"><os family="windows" arch="amd64" /></condition>
	<condition property="linux32"><os family="unix" arch="x86" /></condition>
	<condition property="linux64"><os family="unix" arch="amd64" /></condition>
	
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
		<delete dir="build" />
		
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
		<mkdir dir="project" />
		<mkdir dir="externalLibs" />
	
		<artifact:dependencies filesetId="runtime.fileset" useScope="runtime">
		      <pom file="../pom.xml"/>
	    </artifact:dependencies>
		
		<copy todir="externalLibs">
	      <fileset refid="runtime.fileset" />
	      <flattenmapper/>
	    </copy>
		
		<copy todir="build/libs">
	      <fileset dir="externalLibs">
	      	<!-- 32 bit -->
  			<exclude name="humble-video-arch-i686-apple-darwin12-0.2.1.jar" unless="${mac32}" />
  			<exclude name="humble-video-arch-i686-pc-linux-gnu6-0.2.1.jar" unless="${linux32}" />
  			<exclude name="humble-video-arch-i686-w64-mingw32-0.2.1.jar" unless="${windows32}" />
  			<!-- 64 bit -->
  			<exclude name="humble-video-arch-x86_64-apple-darwin12-0.2.1.jar" unless="${mac64}" />
  			<exclude name="humble-video-arch-x86_64-pc-linux-gnu6-0.2.1.jar" unless="${linux64}" />
  			<exclude name="humble-video-arch-x86_64-w64-mingw32-0.2.1.jar" unless="${windows64}" />
	      </fileset>
	    </copy>
		
		<copy todir="build/src">
			<fileset dir="${parentdir}">
				<include name="src/main/java/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<!--
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
		 -->
	
		<!-- Copy project-libs references 
		<copy todir="build/libs">
			<fileset dir="externalLibs">
			</fileset>
		</copy>
	-->
		<!-- Copy project references -->
	
		<!-- Copy project sources itself
		<copy todir="build/src">
			<fileset dir="project/src/main/java">
				<include name="**/*"/>
			</fileset>
		</copy>
	 -->
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<!--<include name="*"/>-->
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over non Java-Files -->
		<copy todir="build/classes">
			<fileset dir="build/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		
		<!-- Copy over non Java-Files -->
		<copy todir="build/classes/package">
			<fileset dir="${parentdir}/package">
				
			</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<!--
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	-->
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="Praisenter.jar"/>
			<fx:fileset dir="build/libs" includes="*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="Praisenter"
			mainClass="org.praisenter.javafx.Praisenter"
			toolkit="fx"
			version="3.0.0"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
		<fx:jar destfile="dist/Praisenter.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Praisenter"/>
				<attribute name="Implementation-Title" value="Praisenter"/>
				<attribute name="Implementation-Version" value="3"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			verbose="true" 
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="Praisenter" nativeBundles="exe"
			updatemode="background" >
	
			<fx:preferences menu="true" shortcut="true" />
			
			<fx:platform basedir="${java.home}">
				<fx:jvmuserarg name="-Xmx" value="1g" />
	          	<fx:jvmuserarg name="-Xms" value="256m" />
			</fx:platform>
			
			<fx:info title="Praisenter" vendor="Praisenter">
				<!--<fx:icon href="" kind="default" width="" height="" depth="8" />
				<fx:icon href="" kind="shortcut" width="" height="" depth="8" />-->
			</fx:info>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
